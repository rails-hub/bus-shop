<% content_for :title, "Backend Login" %>

<!-- page start -->
<div class="pageContainer" id="contactContainer">
  <div class="pageContent">
    <div class="contactWrap">
     
      <div class="boxLargeTop"></div>
      <div class="contactBox">
        <div class="contactFormContainer">
          <div class="contactTitle">
            <h2 class="customTitle2">Login to the Admin Panel</h2>
            <h3 class="customTitle3">System v2 Buses</h3>
          </div>

          <!-- custom form messages start -->
			<%= render :partial => "shared/devise_errors" %>
          <!-- custom form messages end -->
          <!-- contact form start -->
          <div class="contactForm" id="contactForm">

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			 	<fieldset>
			  <%= f.label :email %>
			  <%= f.email_field :email, :class => "text-input", :id => "contactName" %>
			  <%= f.label :password %>
			  <%= f.password_field :password, :class => "text-input", :id => "contactName" %>
			  <%= f.submit "", :class=> "contactButton", :id => "contactSubmitBtn" %>
			<% end %>
			
			<% # if devise_mapping.rememberable? 
			-%>
			
			<%= #f.check_box :remember_me %> <%= f.label :remember_me 
			%>
			
			<% #end 
			-%>
			
			<%= #render :partial => "devise/shared/links" 
			%>

          </div>
          <!-- contact form end -->
        </div>
      </div>
      <div class="boxLargeBottom"></div>

    </div>
    <!-- wrap end -->
  </div>
</div>
<!-- page end -->




