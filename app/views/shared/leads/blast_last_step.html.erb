<% content_for :title, "Review & Send" %>

<div id="content">

	<%= render :partial => 'shared/leads/menu_icons_step2'   %>
	<div class="">
        <div class="contentTable">
            <table width="100%">
               <thead>
                <tr class="tableTop"> 
                   <th align="left" class="actions_col unsortable header"><%= image_tag "/assets/admin/create_message.png", :height => "14px" %><h1 style="margin-left:5px;">Email Message</h1></th>
               </tr>
               <tr align="left"> 
                   <td style="text-align:left;">
                      <%= form_for :blast, :url => admin_leads_send_blast_path, :method => "POST", :html => {:id => "blast_form"} do %>
                      <table>
                          <tr>
                             <td>
                                <%= label_tag(:subject, "Subject") %>
                            </td>
                            <td style="text-align:left">
                                <%= text_field_tag(:subject, session[:subject]) %>
                            </td>
                        </tr>
                        <tr>
                         <td valign="top">
                            <%= label_tag(:message, "Message") %>
                        </td>
                        <td>
                            <%= text_area_tag :message, session[:message], :size => "80x6" %>
                            <%= hidden_field_tag :stocks, params[:stocks], :id => "stocks" %>
                            <%= hidden_field_tag :leads, params[:leads] %>
                        </td>
                    </tr>
                </table>
                <% end %>
            </td>

        </tr>
    </table>
</div>

<div class="">
    <div class="contentTable">
        <table width="100%">
           <thead>
            <tr class="tableTop"> 
               <th align="left" class="actions_col unsortable header"><%= image_tag "/assets/admin/icons/busIcon.png", :height => "14px" %><h1 style="margin-left:5px;">Email Blast Entry</h1><span>- <span id="stock_counts"><%= @buses_model.count %></span> items</span></th>
           </tr>
           <tr align="left"> 
               <td>
                  <div align="left" style="height: 300px;overflow: scroll;">
                     <% @buses_model.each do |bus| %>
                     <div id="<%= bus.stock_id %>" class="bus_selector">
                       <div class="bus_image">
                          <%= image_tag bus.images.first.image_url(:thumb), :alt => bus.stock_id, :style => ""%>
                      </div>
                      <div class="bus_text">
                          <b><%= bus.year + " - " + bus.bus_type.name%></b><br/>
                          <span>Price - </span><%= number_to_currency(bus.price_on_site) %><br/><br/>
                          <span>Stock# - </span><%= bus.stock_id %><br/><br/><br />
                          <span><a href="#" onclick="remove_stock(this)">Remove</a></span><br/>
                      </div>
                  </div>
                  <% end %>
              </div>

          </td>

      </tr>
  </table>
</div>
<div class="">
    <div class="contentTable">
        <table width="100%">
           <thead>
            <tr class="tableTop"> 
               <th align="left" class="actions_col unsortable header"><%= image_tag "/assets/admin/icons/busIcon.png", :height => "14px" %><h1 style="margin-left:5px;">Leads Blast Entry</h1><span>- <%= @leads_model.count %> items</span></th>
           </tr>
           <tr align="left"> 
               <td>
                  <div align="left">

                     <%= text_area_tag :emails, @emails, :size => "80x6" %>
                 </div>

             </td>

         </tr>
     </table>
 </div>


</div>
